
<h1> All blog</h1>
<br><br>

<h3>click on the title to view ====> </h3>
<br><br>
<form action="/allblog">
    <select name="c" > 
     <option value="hidden">Select</option>
        <option value="General">General</option>
        <option value="Sports">Sports</option>
        <option value="Political">Political</option>
        <option value="Entertainment">Entertainment</option>
        <option value="Education">Education</option>
        <option value="Others">Others</option>
    </select>
    <button type="submit">Select by Category</button>
</form> 
<br><br>

<form action="/allblog">
    <select name="s" > 
        <option value="1">Newest</option>
        <option value="2">Oldest</option>
        <option value="3">A to Z</option>
        <option value="4">Z to A</option>
    </select>
    <button type="submit">Sort</button>
</form> 
<br><br>

<% @blogpost.each do |i| %>
    <h3><hr><%= link_to i.title, "blogposts/#{i.id}" %><br><br><br></h3>
    <h3><%= i.content %></h3><br><br>
    <h3>Category: <%= i.category %></h3><br><br>
<%end%>





   